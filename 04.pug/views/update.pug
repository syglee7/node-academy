extends ./layout/board.pug
block title
		.jumbotron
				h2= title
						small 게시글 수정 입니다.
block content
		form(method="post" name="updateForm" action="/pug/update" onSubmit="return upData();")
				input(type="hidden" name="id" value=`${data.id}`)
				.p-3
						input.form-control(type="text" name="title" value=`${data.title}`)
				.p-3.my-3
						textarea.form-control(name="content")= data.content
				.p-3.text-center
						button.btn-primary#btSave(data-id=`${data.id}`) 저장    
						button.btn-danger(type="reset") 다시작성    
						button.btn-success#btList(type="button") 리스트    